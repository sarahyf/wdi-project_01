<%= form_for @event, remote: true do |f| %>

<div class="form">

<div>
<%= f.label :event_title %> <br>
<%= f.text_field :event_title, required: true %>
</div>

<div>
<%= f.label :start_time %> <br>
<%= f.datetime_select :start_time, ampm: true, required: true  %>
</div>

<div>
<%= f.label :end_time %> <br>
<%= f.datetime_select :end_time, ampm: true, required: true %>
</div>

<div>
<%= f.label :description %> <br>
<%= f.text_area :description %>
</div>


<%= f.submit %>

</div>

<% end %>

