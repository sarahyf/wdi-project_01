<%= form_for @event do |f| %>

<div>
<%= f.label :event_title %>
<%= f.text_field :event_title %>
</div>

<div>
<%= f.label :start_time %>
<%= f.date_field :start_time %>
</div>

<div>
<%= f.label :end_time %>
<%= f.date_field :end_time %>
</div>

<div>
<%= f.label :description %>
<%= f.text_area :description %>
</div>


<%= f.submit %>

<% end %>

