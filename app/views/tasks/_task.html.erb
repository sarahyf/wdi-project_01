<%= form_for task, remote: true do |f| %>
  <% if task.created_at.to_date == DateTime.now.to_date %>
    <%= f.check_box :completed %>
    <%= f.submit "Update" %>

    <% if task.completed == false %>
     <%= f.label :completed,task.task_title, id: "incompleted_tasks"%>
     <% end %>

    <% if task.completed == true %>
      <%= f.label :completed,task.task_title, id: "completed_tasks"%>
    <% end %>

    <%= link_to "delete", task, method: :delete, id:"delete_task" , remote: true %>
<% end %>
<% end %>