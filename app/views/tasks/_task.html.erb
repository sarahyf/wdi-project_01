<%= form_for task, remote: true do |f| %>
  <% if task.created_at.to_date == DateTime.now.to_date %>
    <%= f.check_box :completed %>
    <%= f.submit "Update" %>

     <%= f.label :completed,task.task_title %>

    <%= link_to "delete", task, method: :delete, id:"delete_task" , remote: true %>
  <% end %>
<% end %>