<% if @task.completed %>
  $('#edit_task_<%= @task.id %>').appendTo('#complete_tasks');
  $('#edit_task_<%= @task.id %>').css("color", "green");
  $('#edit_task_<%= @task.id %>').css("font-size", "25px");

<% else %>
  $('#edit_task_<%= @task.id %>').appendTo('#incomplete_tasks');
  $('#edit_task_<%= @task.id %>').css("color", "red");
  $('#edit_task_<%= @task.id %>').css("font-size", "25px");

<% end %>