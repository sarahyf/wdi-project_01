<nav id="events">
  <%# link_to "Add Task", new_task_path %>

  <h3 id="addEvent"><%= link_to "Add Event", new_event_path %></h3>
  <h3 id="showEvent"><%= link_to "Show Events", events_path %></h3>
</nav>


<%= month_calendar events: @user.events do |date, events| %>

<% val = false %>
<% counter = 0 %>
<% array = [] %>
  <% events.each do |event| %>
    <% val = true %>
    <% counter += 1 %>

   <% if counter == 1%>
   <%= link_to date.day %>
     <% end %>
     
    <div>
        <%= event.event_title %>
    </div>
    <% array.push(event) %>
  <% end %>
  <% if val == false %>
     <%= link_to date.day %>
  <% end %>
<% end %>



